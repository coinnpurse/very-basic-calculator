<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="50dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcView"
        app:rowCount="5">


        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="7"
            android:textSize="35sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="8"
            android:textSize="35sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="9"
            android:textSize="35sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonP"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bluec"
            android:paddingLeft="2dp"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="4"
            android:textSize="35sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="5"
            android:textSize="35sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="6"
            android:textSize="35sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonS"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bluec"
            android:paddingLeft="2dp"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="1"
            android:textSize="35sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="2"
            android:textSize="35sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="3"
            android:textSize="35sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonM"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bluec"
            android:paddingLeft="2dp"
            android:text="x"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="0"
            android:textSize="35sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="87dp"
            android:layout_height="84dp"
            android:layout_margin="2dp"
            android:background="@drawable/redc"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="87dp"
            android:layout_height="84dp"
            android:layout_margin="2dp"
            android:background="@drawable/redc"
            android:text="AC"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonE"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/greenc"
            android:onClick="equalsFunc"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonD"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bluec"
            android:paddingLeft="2dp"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonDec"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="."
            android:textSize="35sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonAns"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="ANS"
            android:textSize="28sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonRan"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_margin="2dp"
            android:text="RAN"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_column="3"
            app:layout_row="0" />


    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/calcView"
        android:layout_width="361dp"
        android:layout_height="158dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/black"
        android:gravity="bottom|right"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

</androidx.constraintlayout.widget.ConstraintLayout>